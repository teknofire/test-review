%section#header
  %nav.navbar.navbar-default.navbar-fixed-top
    .container-fluid
      .navbar-header
        %button.navbar-toggle{ type:"button", data: { toggle: "collapse", target: "#page-navbar" } }
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        .navbar-brand
          %ol.breadcrumb
            %li= link_to 'Test Review', root_path
            = yield :breadcrumbs

      #page-navbar.collapse.navbar-collapse
        %ul.nav.navbar-nav.navbar-right
          - if member?
            %li.dropdown
              = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
                Manager
                %b.caret

              %ul.dropdown-menu
                %li= link_to 'New Review Section', new_section_path
          - if signed_in?
            %li= link_to 'Logout', logout_path
          - else
            %li= link_to 'Login', login_path
