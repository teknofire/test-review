= form_for([@section, @question, @answer]) do |f|
  - if @answer.errors.any?
    #error_explanation
      %h2
        = pluralize(@answer.errors.count, "error")
        prohibited this answer from being saved:
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :text
    = f.text_area :text, rows: 25, class: 'form-control'
  .actions
    = link_to 'Cancel', section_question_path(@section, @question), class: 'btn btn-default'
    = f.submit class: 'btn btn-primary pull-right'
